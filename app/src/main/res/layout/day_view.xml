<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.DayViewActivity"
    android:id="@+id/mainLayout"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp" >

    <!--> Day Header <!-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/headers_horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/dateTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textStyle="bold"
            android:gravity="center"
            android:textSize="30sp"
            android:textColor="@color/white"
            android:text="31th December 2026"/>

    </LinearLayout>


    <!--> Separator between day and tasks <!-->
    <View
        android:id="@+id/firstView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line" />

    <!--> Tasks header <!-->
    <LinearLayout
        android:id="@+id/tasksLinearLayout"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:baselineAligned="false">


    </LinearLayout>

    <!--> Separator between tasks and meetings <!-->
    <View
        android:id="@+id/secondView"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/line" />

    <!--> ScrollView <!-->
    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:overScrollMode="never"
        android:padding="0dp"
        android:scrollbars="none"
        android:fadingEdge="none">

        <!--> Events <!-->
        <RelativeLayout
            android:id="@+id/calendar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="0dp">

            <!--> Linear Layout Events <!-->
            <LinearLayout
                android:id="@+id/calendarLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:baselineAligned="false"
                android:padding="0dp" >

                <!--> Hours <!-->
                <RelativeLayout
                    android:id="@+id/hours"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:background="@color/headers">

                    <include layout="@layout/calendar_events" />

                    <!--> 12AM <!-->
                    <TextView
                        android:id="@+id/time12am"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="0dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textColor="@color/gray"
                        android:text="@string/am12"/>

                    <!--> 01AM <!-->
                    <TextView
                        android:id="@+id/time01am"
