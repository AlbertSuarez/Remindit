                    <!--> 11PM <!-->
                    <TextView
                        android:id="@+id/time11pm"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="1380dp"
                        android:gravity="center"
                        android:textColor="@color/gray"
                        android:textSize="14sp"
                        android:text="@string/pm11"/>

                </RelativeLayout>

                <!--> Separator between Hours and Events <!-->
                <View
                    android:layout_width="1dp"
                    android:layout_height="match_parent"
                    android:background="@color/line" />

                <!--> Events <!-->
                <RelativeLayout
                    android:id="@+id/meetings"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="2"
                    android:background="@drawable/background_degradable">

                    <include layout="@layout/calendar_events" />

                </RelativeLayout>

            </LinearLayout>

        </RelativeLayout>

    </ScrollView>

</LinearLayout>